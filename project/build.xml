<xml>

    <include name="${HXCPP}/build-tool/BuildCommon.xml"/>

    <set name="iphonesim" value="1" if="ios"/>
    <set name="iphoneos" value="1" if="ios" unless="simulator"/>

    <set name="mobile" value="1" if="iphone"/>
    <set name="mobile" value="1" if="android"/>
    <set name="mobile" value="1" if="webos"/>
    <set name="mobile" value="1" if="blackberry"/>
    <set name="mobile" value="1" if="gph"/>

    <set name="IOS_ARCH" value="-v7" if="HXCPP_ARMV7"/>

    <set name="ndll-tool" value="dll" unless="iphone"/>
    <set name="ndll-tool" value="static" if="iphone"/>
    <set name="name_extra" value=".iphonesim" if="iphonesim"/>
    <set name="name_extra" value=".iphoneos${IOS_ARCH}" if="iphoneos"/>

    <set name="name_extra" value="-x86" if="simulator" unless="iphonesim"/>
    <set name="name_prefix" value="lib" if="iphone"/>

    <files id="common">

        <depend name="${HXCPP}/include/hx/Macros.h"/>
        <depend name="${HXCPP}/include/hx/CFFI.h"/>

        <compilerflag value="-Iinclude"/>
        <compilerflag value="-I../ffmpeg"/>
        <compilerflag value="-I${ANDROID_NDK_ROOT}/sources/cpufeatures" if="android"/>

        <compilerflag value="-Dinline=__inline" if="windows"/>
        <compilerflag value="-D__STDC_CONSTANT_MACROS"/>

        <file name="ExternalInterface.cpp"/>
    </files>

    <target id="NDLL" output="${name_prefix}openfl-ffmpeg${name_extra}" tool="linker" toolid="${ndll-tool}">
        <outdir name="../ndll/${BINDIR}"/>
        <ext value=".ndll" unless="mobile"/>
        <files id="common"/>

        <!--<flag value="-libpath:../libs/Windows" if="windows"/>-->
        <!--<lib name="libavcodec.a" if="windows"/>-->
        <!--<lib name="libavdevice.a" if="windows"/>-->
        <!--<lib name="libavfilter.a" if="windows"/>-->
        <!--<lib name="libavformat.a" if="windows"/>-->
        <!--<lib name="libavutil.a" if="windows"/>-->
        <!--<lib name="libiconv.a" if="windows"/>-->
        <!--<lib name="libswresample.a" if="windows"/>-->
        <!--<lib name="libswscale.a" if="windows"/>-->
        <!--<lib name="Advapi32.lib" if="windows"/>-->

        <!--<flag value="-L../libs/Android" if="android"/>-->
        <!--<lib name="-lavformat" if="android"/>-->
        <!--<lib name="-lavcodec" if="android"/>-->
        <!--<lib name="-lavdevice" if="android"/>-->
        <!--<lib name="-lavfilter" if="android"/>-->
        <!--<lib name="-lavutil" if="android"/>-->
        <!--&lt;!&ndash;<lib name="-liconv" if="android"/>&ndash;&gt;-->
        <!--<lib name="-lswresample" if="android"/>-->
        <!--<lib name="-lswscale" if="android"/>-->
        <!--<lib name="-lz" if="android"/>-->

        <!--<flag value="-L/usr/local/Cellar/ffmpeg/2.4.3/lib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libavcodec.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libavdevice.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libavfilter.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libavformat.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libavutil.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libswresample.dylib" if="mac"/>-->
        <!--<lib name="/usr/local/Cellar/ffmpeg/2.4.3/lib/libswscale.dylib" if="mac"/>-->
        <!--<lib name="-liconv" if="mac"/>-->

        <flag value="-L../libs/Linux" if="linux"/>
        <lib name="-lswscale" if="linux"/>
        <lib name="-lavfilter" if="linux"/>
        <lib name="-lavdevice" if="linux"/>
        <lib name="-lswresample" if="linux"/>
        <lib name="-lavformat" if="linux"/>
        <lib name="-lavcodec" if="linux"/>
        <lib name="-lavutil" if="linux"/>
        <lib name="-lbz2" if="linux"/>
        <lib name="-lz" if="linux"/>
        <lib name="-lpthread" if="linux"/>

    </target>

    <target id="default">
        <target id="NDLL"/>
    </target>

</xml>
